#include <iostream>
using namespace std;

int main()
{
    char letra;
    cout << "digite uma letra: ";
    cin >> letra;
    letra = tolower(letra);
    
if (letra == 'a' || letra == 'e' || letra == 'i' || letra == 'o' || letra == 'u') {
    cout << "a letra é uma vogal.";
}
else if ((letra >= 'a' && letra <= 'z')) {
    cout << "a letra é uma consoante.";
}
else {
    cout << "caractere inválido";
}
    return 0;
}
